doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    title 
        block title
            | #{site.name}
    link(rel='shortcut icon',type="image/x-icon",href="/images/favicon.ico")
    link(rel='stylesheet', href='/css/style.css')
  body
    block header
        #hd
            .container.clearfix
                .row
                    #logo
                        h1
                            a(href="/") #{site.name}

    block content
    block footer
        #ft
            .container.clearfix
                .row
                    .col-lg-12
                        .copyright &copy; #{new Date().getFullYear()} #{sys.name} v#{sys.version}